<%- include('../partials/header') %>

<h2>All Flights</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departure Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(flight => { %>
            <tr class="<%= flight.valid ? '' : 'red-text' %> ">
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
                <td><a href="/flights/<%= flight.flightNo %>">Details</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>